
@model Tenant
@{
	Layout = "_Layout";
}

<form method="post" asp-controller="Tenant" asp-action="Create"> 
	 <script type="text/javascript">
            $(document).ready(function () {
                $('.fcdatepicker').datepicker({
                    changeMonth: true,
                    changeYear: true,
                    format: "dd/mm/yyyy",
                });
            });
        </script>
		<div class="container   p-5	">
	<div class="  ">
		<div class="row ">
			<h2 class="text-primary"> Tenant Details</h2>
			       <input asp-for="Password" value="" hidden/>

			<hr />
		</div>
	
		@*<div asp-validation-summary="All"></div>*@
		<div class="row ">
		<div class="mb-3 col-sm-6">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		</div>
		<div class="row ">
		<div class="mb-3 col-sm-6">
			<label asp-for="EmailId"></label>
			<input asp-for="EmailId" class="form-control" />
			<span asp-validation-for="EmailId" class="text-danger"></span>
		</div>
		</div>
				<div class="row ">
		<div class="mb-3 col-sm-6">
			<label asp-for="MobileNo"></label>
			<input  asp-for="MobileNo" class="form-control"   />
			<span asp-validation-for="MobileNo" class="text-danger"></span>
		</div>
	 
		</div>
		   <div class="row ">
                    <div class="mb-3 col-sm-6">
                        <label asp-for="BuildingId"></label>
           	<select  asp-for="BuildingId" class="form-control"  asp-items='@(new SelectList(@ViewBag.buildings,"BuildingId","Name"))'></select>
                        <span asp-validation-for="BuildingId" class="text-danger"></span>
                    </div>
				<div class="row ">
		<div class="mb-3 col-sm-6">
			<label asp-for="FlatNo"></label>
			<input  asp-for="FlatNo" class="form-control" />
			<span asp-validation-for="FlatNo" class="text-danger"></span>
		</div>
		</div>
				<div class="row ">
		<div class="mb-3 col-sm-6">
			<label asp-for="FlatTypeId"></label>
		           	<select  asp-for="FlatTypeId" class="form-control"  asp-items='@(new SelectList(@ViewBag.flattypes,"FlatTypeId","Name"))'></select>

			<span asp-validation-for="FlatTypeId" class="text-danger"></span>
		</div>
		</div>
				<div class="row ">
		<div class="mb-3 col-sm-6">
			<label asp-for="StartDate"></label>
			<input  asp-for="StartDate" class="form-control" />
			<span asp-validation-for="StartDate" class="text-danger"></span>
		</div>
		</div>
			<div class="row ">
		<div class="mb-3 col-sm-6">
			<label asp-for="EndDate"></label>
			<input  asp-for="EndDate" class="form-control" />
			<span asp-validation-for="EndDate" class="text-danger"></span>
		</div>
		</div>
			<div class="row  " >
				<div class="container-fluid p-3 justify-content-center align-content-center">
			<button type="submit" class="btn btn-primary  " style="width:150px">Create</button>
		<a asp-controller="Tenant" asp-action="Index" class="btn btn-secondary" style="width:150px" >
			Back to List
		</a>
		</div>
		</div>
		</div>
		</div>
		</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}

}

