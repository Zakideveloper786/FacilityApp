@using FacilityApp.ViewModels
@model TenantRegistration
@{
	Layout = "_Layout";
}

<form method="post" asp-controller="Tenant" asp-action="Create"> 
	 
	
		<div class="row ">
			<h2 class="text-primary"> Tenant Details</h2>
			<hr />
		</div>
	
		@*<div asp-validation-summary="All"></div>*@
		<div class="row ">
