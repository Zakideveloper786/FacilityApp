		<div class="mb-3 col-sm-6">
				<label asp-for="TenantFlatDetails.BuildingId"></label>
			<select  asp-for="TenantFlatDetails.BuildingId" class="form-control"  asp-items='@(new SelectList(@ViewBag.buildings,"BuildingId","Name"))'></select>
