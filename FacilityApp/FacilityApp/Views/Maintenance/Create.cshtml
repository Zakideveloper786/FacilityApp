
@model Maintenance
@{
	Layout = "_Layout";
}

<form method="post" asp-controller="Maintenance" asp-action="Create" enctype="multipart/form-data"> 
	 <script type="text/javascript">
            $(document).ready(function () {
                $('.fcdatepicker').datepicker({
                    changeMonth: true,
                    changeYear: true,
                    format: "dd/mm/yyyy",
                });
            });
        </script>
	<div class="container   p-5	">
	<div class="  ">
		<div class="row ">
			<h2 class="text-primary"> Maintenance Details</h2>
			<hr />
		</div>
	
		
		<div class="row ">
		<div class="mb-3 col-sm-6">
			<label asp-for="TenantId"></label>
	       <select  asp-for="TenantId" class="form-control"  asp-items='@(new SelectList(@ViewBag.tenants,"TenantId","Name"))'></select>		
			<span asp-validation-for="TenantId" class="text-danger"></span>
		</div>
		</div>
		<div class="row ">
		<div class="mb-3 col-sm-6">
			<label asp-for="IssueTypeId"></label>
				       <select  asp-for="IssueTypeId" class="form-control"  asp-items='@(new SelectList(@ViewBag.issues,"IssueTypeId","Name"))'></select>		

			<span asp-validation-for="IssueTypeId" class="text-danger"></span>
		</div>
		@*<div class="mb-3">
			<label asp-for="RoleId"></label>
			<select  asp-for="RoleId" class="form-control"  asp-items='@(new SelectList(@ViewBag.Roles,"RoleId","RoleName"))'> </select>
			<span asp-validation-for="EmailID" class="text-danger"></span>
		</div>*@

		</div>
	
			<div class="row ">
		<div class="mb-3 col-sm-6">
			<label asp-for="IssueDetails"></label>
			<textarea  asp-for="IssueDetails" class="form-control"   rows="3" cols="40"></textarea>
			<span asp-validation-for="IssueDetails" class="text-danger"></span>
		</div>
		</div>
		<div class="row ">
		<div class="mb-3 col-sm-6">
			<label asp-for="UserId"></label>
	       <select  asp-for="UserId" class="form-control"  asp-items='@(new SelectList(@ViewBag.Users,"UserId","Name"))'></select>		
			<span asp-validation-for="UserId" class="text-danger"></span>
		</div>
		</div>
					<div class="row ">
		<div class="mb-3 col-sm-6">
			<label asp-for="ImagePath"></label>
			<input type="file"   class="form-control"   rows="3" cols="40"/>
			<span asp-validation-for="ImagePath" class="text-danger"></span>
		</div>
		</div>
	<button type="submit" class="btn btn-primary" style="width:150px">Create</button>
		<a asp-controller="Maintenance" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}

}

